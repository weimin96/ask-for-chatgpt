{
  "description": "在网页中划词显示ChatGPT的解释",
  "manifest_version": 3,
  "name": "Ask For ChatGPT",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Ask For ChatGPT"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/content.css"],
      "js": ["js/content.js", "js/chunk-vendors.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tts"
  ]
}
